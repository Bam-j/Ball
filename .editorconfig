# .editorconfig - 루트 디렉토리에 위치
root = true

# 모든 파일에 기본 적용
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 2

# Markdown 파일은 공백 제거 금지
[*.md]
trim_trailing_whitespace = false

# Java, Kotlin, XML은 4칸 들여쓰기
[*.{java,kt,xml}]
indent_size = 4

# YAML (Spring 설정용)은 2칸 들여쓰기
[*.yml]
indent_size = 2

# JSON도 2칸 들여쓰기
[*.json]
indent_size = 2

# Shell scripts
[*.sh]
end_of_line = lf
